<div class="container my-5">
  <h1 class="mb-4 text-center">マイページ</h1>
  
  <div class="row">
    <!-- 統計カード -->
    <div class="col-md-4">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title">ブックマーク統計</h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              総ブックマーク数
              <span class="badge bg-primary rounded-pill"><%= @bookmark_count %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to '未読', unread_bookmarks_path, class: 'text-decoration-none text-dark' %>
              <span class="badge bg-warning text-dark rounded-pill"><%= @unread_count %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to '既読', read_bookmarks_path, class: 'text-decoration-none text-dark' %>
              <span class="badge bg-success rounded-pill"><%= @read_count %></span>
            </li>
          </ul>
          <div class="mt-3 text-center">
            <%= link_to 'ブックマーク一覧を見る', bookmarks_path, class: 'btn btn-primary btn-sm me-2' %>
            <%= link_to '新規ブックマーク追加', new_bookmark_path, class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>

      <!-- よく使用するタグカード -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">よく使用するタグ</h5>
          <% if @top_tags.any? %>
            <div class="d-flex flex-wrap gap-2 mt-2">
              <% @top_tags.each do |tag_name, count| %>
                <span class="badge bg-primary">
                  <%= tag_name %> (<%= count %>)
                </span>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">まだタグが設定されていません</p>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- 最近追加されたブックマーク -->
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">最近追加したブックマーク</h5>
          <% if @recent_bookmarks.any? %>
            <div class="list-group">
              <% @recent_bookmarks.each do |bookmark| %>
                <div class="list-group-item list-group-item-action">
                  <div class="d-flex justify-content-between">
                    <h6 class="mb-1">
                      <%= bookmark.title %>
                      <span class="badge bg-<%= bookmark.status == '未読' ? 'warning text-dark' : 'success' %>">
                        <%= bookmark.status %>
                      </span>
                    </h6>
                    <small class="text-muted">
                      <%= l bookmark.created_at, format: :short %>
                    </small>
                  </div>
                  <p class="mb-1 text-truncate">
                    <%= link_to bookmark.url, bookmark.url, target: '_blank', class: 'text-decoration-none text-primary' %>
                  </p>
                  <% if bookmark.tags.any? %>
                    <div class="mt-2">
                      <% bookmark.tags.each do |tag| %>
                        <span class="badge bg-secondary"><%= tag.name %></span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">まだブックマークがありません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
