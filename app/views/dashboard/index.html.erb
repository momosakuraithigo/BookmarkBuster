<div class="container">
  <h1 class="mb-4">マイページ</h1>
  
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">ブックマーク統計</h5>
          <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between align-items-center">
              総ブックマーク数
              <span class="badge bg-primary rounded-pill"><%= @bookmark_count %></span>
            </div>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              未読
              <span class="badge bg-warning rounded-pill"><%= @unread_count %></span>
            </div>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              既読
              <span class="badge bg-success rounded-pill"><%= @read_count %></span>
            </div>
          </div>
          <div class="mt-3">
            <%= link_to 'ブックマーク一覧を見る', bookmarks_path, class: 'btn btn-primary' %>
            <%= link_to '新規ブックマーク追加', new_bookmark_path, class: 'btn btn-success mt-2' %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">よく使用するタグ</h5>
          <% if @top_tags.any? %>
            <div class="d-flex flex-wrap gap-2">
              <% @top_tags.each do |tag_name, count| %>
                <span class="badge bg-primary">
                  <%= tag_name %> (<%= count %>)
                </span>
              <% end %>
            </div>
          <% else %>
            <p class="card-text">まだタグが設定されていません</p>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">最近追加したブックマーク</h5>
          <% if @recent_bookmarks.any? %>
            <div class="list-group">
              <% @recent_bookmarks.each do |bookmark| %>
                <div class="list-group-item">
                  <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">
                      <%= bookmark.title %>
                      <span class="badge bg-<%= bookmark.status == 'unread' ? 'warning' : 'success' %>">
                        <%= bookmark.status %>
                      </span>
                    </h6>
                    <small class="text-muted">
                      <%= l bookmark.created_at, format: :short %>
                    </small>
                  </div>
                  <p class="mb-1">
                    <%= link_to bookmark.url, bookmark.url, target: '_blank', class: 'text-truncate d-inline-block', style: 'max-width: 500px;' %>
                  </p>
                  <% if bookmark.tags.any? %>
                    <small>
                      <% bookmark.tags.each do |tag| %>
                        <span class="badge bg-secondary"><%= tag.name %></span>
                      <% end %>
                    </small>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="card-text">まだブックマークがありません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>