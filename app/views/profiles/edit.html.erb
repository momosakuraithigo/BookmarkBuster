<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="h4 mb-0">プロフィール編集</h1>
        </div>
        
        <div class="card-body">
          <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :username, 'ユーザー名', class: 'form-label' %>
              <%= f.text_field :username, class: 'form-control', placeholder: 'ユーザー名を入力' %>
              <div class="form-text">他のユーザーに表示される名前です</div>
            </div>

            <div class="mb-3">
              <%= f.label :email, 'メールアドレス', class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', disabled: true %>
              <div class="form-text">メールアドレスの変更は設定画面から行ってください</div>
            </div>

            <div class="mb-3">
              <%= f.label :bio, '自己紹介', class: 'form-label' %>
              <%= f.text_area :bio, rows: 5, class: 'form-control', placeholder: '自己紹介を入力' %>
              <div class="form-text">500文字以内で入力してください</div>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <%= link_to 'キャンセル', profile_path, class: 'btn btn-secondary' %>
              <%= f.submit '更新', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
