<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">プロフィール</h1>
            <%= link_to '編集', edit_profile_path, class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h5 class="card-title text-muted">ユーザー名</h5>
            <p class="card-text"><%= @user.username.presence || '未設定' %></p>
          </div>

          <div class="mb-4">
            <h5 class="card-title text-muted">メールアドレス</h5>
            <p class="card-text"><%= @user.email %></p>
          </div>

          <div class="mb-4">
            <h5 class="card-title text-muted">自己紹介</h5>
            <p class="card-text"><%= @user.bio.presence || '未設定' %></p>
          </div>

          <div class="mb-4">
            <h5 class="card-title text-muted">登録日</h5>
            <p class="card-text"><%= l @user.created_at, format: :long %></p>
          </div>

          <div class="mb-4">
            <h5 class="card-title text-muted">ブックマーク数</h5>
            <p class="card-text"><%= @user.bookmarks.count %></p>
          </div>

          <div class="text-end">
            <%= link_to 'ダッシュボードに戻る', dashboard_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>